<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.pavilion.libraryui.controller.LibraryController"
            stylesheets="@style.css" fx:id="rootPane">

  <!-- Toolbar -->
  <top>
    <HBox alignment="CENTER">
      <ToolBar styleClass="toolbar">
        <Button text="Add" onAction="#onAdd" fx:id="btnAdd" styleClass="primary-btn"/>
        <Button text="Update" onAction="#onUpdate" fx:id="btnUpdate" styleClass="accent-btn"/>
        <Button text="Delete" onAction="#onDelete" fx:id="btnDelete" styleClass="danger-btn"/>
        <Button text="Refresh" onAction="#onRefresh" fx:id="btnRefresh" styleClass="neutral-btn"/>
        <Label text="Search:" styleClass="toolbar-label"/>
        <TextField fx:id="searchField" onKeyReleased="#onSearch" styleClass="search-field"/>
      </ToolBar>
    </HBox>
  </top>


  <!-- Table and Pagination -->
  <center>
    <VBox alignment="CENTER">
        <HBox alignment="CENTER">
            <TableView fx:id="tableView" styleClass="data-table" prefWidth="600" prefHeight="400">
                <columns>
                    <TableColumn text="ID" fx:id="colId" />
                    <TableColumn text="Title" fx:id="colTitle" />
                    <TableColumn text="Author" fx:id="colAuthor" />
                    <TableColumn text="ISBN" fx:id="colIsbn" />
                    <TableColumn text="Published" fx:id="colPublished" />
                </columns>
            </TableView>
        </HBox>


      <!-- Pagination Controls -->
      <HBox alignment="CENTER" spacing="10">
        <Button text="⏮ First" onAction="#onFirstPage" fx:id="btnFirst"/>
        <Button text="◀ Prev" onAction="#onPrevPage" fx:id="btnPrev"/>
        <Label text="Page:"/>
        <Label fx:id="lblCurrentPage" text="1"/>
        <Label text="of"/>
        <Label fx:id="lblTotalPages" text="1"/>
        <Button text="Next ▶" onAction="#onNextPage" fx:id="btnNext"/>
        <Button text="Last ⏭" onAction="#onLastPage" fx:id="btnLast"/>
      </HBox>
    </VBox>
  </center>

  <!-- Input Form -->
  <bottom>
    <GridPane hgap="10" vgap="10" styleClass="form-pane" alignment="CENTER">
      <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
      </padding>

      <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

      <Label text="Author:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
      <TextField fx:id="authorField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

      <Label text="ISBN:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
      <TextField fx:id="isbnField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

      <Label text="Published (YYYY-MM-DD):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
      <TextField fx:id="publishedField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    </GridPane>
  </bottom>
</BorderPane>
